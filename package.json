{
  "name": "@uwu-codes/tsconfig",
  "version": "1.0.8",
  "description": "My TypeScript config for my projects.",
  "main": "./esm.tsconfig.json",
  "files": [
    "esm.tsconfig.json",
    "bun.tsconfig.json"
  ],
  "exports": {
    ".": {
      "import": "./esm.tsconfig.json",
      "default": "./esm.tsconfig.json"
    },
    "./esm": "./esm.tsconfig.json",
    "./bun": "./bun.tsconfig.json"
  },
  "scripts": {
    "prepare:bun": "node -e \"const fs=require('fs'),d=process.cwd();fs.cpSync(d+'/package.json',d+'/package.json.bck');const pkg=JSON.parse(fs.readFileSync(d+'/package.json','utf8'));pkg.version=pkg.version+'-bun';pkg.dependencies={typescript:pkg.dependencies.typescript},fs.writeFileSync(d+'/package.json',JSON.stringify(pkg,null,2),'utf8');\"",
    "publish:bun": "npm run prepare:bun && npm publish --tag bun --no-git-checks && mv package.json.bck package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UwUCode/tsconfig.git"
  },
  "author": "Donovan_DMC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UwUCode/tsconfig/issues"
  },
  "homepage": "https://github.com/UwUCode/tsconfig#readme",
  "engines": {
    "node": ">=20"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@swc/core": "^1.3.41",
    "@swc/helpers": "^0.4.14",
    "typescript": "^5.0.2"
  }
}
